<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@android:color/transparent"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/toogleIcon"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@drawable/toggle"
            android:tint="#000000"
            android:tintMode="src_in" />
        <RelativeLayout
            android:id="@+id/appNameLayout"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:layout_toLeftOf="@id/tv_kyc"
            android:layout_toRightOf="@id/toogleIcon"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/titleTxt"
                style="@style/TextStyleBold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAllCaps="true"
                android:text="@string/home_vlc"
                android:textColor="@color/darkGeay"
                android:textSize="@dimen/_12ssp" />

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_ivr"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_toLeftOf="@+id/tv_kyc"
            android:layout_marginEnd="10dp"
            android:text="@string/ivr"
            android:textColor="@color/darkGeay"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_kyc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp"
            android:text="@string/KYC"
            android:textColor="@color/darkGeay"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>
</layout>
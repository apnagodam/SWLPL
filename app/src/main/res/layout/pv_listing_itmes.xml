<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
    <LinearLayout
        android:id="@+id/cell_container"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="7"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_auditor"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="Mukesh Sunda (9119103222)"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_8ssp" />

        <include layout="@layout/layout_divider_horizontal" />

        <TextView
            android:id="@+id/tv_terminal"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="Bhagirath Ji Warehouse, Palsana(082309)"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_8ssp" />

        <include layout="@layout/layout_divider_horizontal" />

        <TextView
            android:id="@+id/tv_user_name"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="R K WAREHOUSE CHOMU (9874563219"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_8ssp" />

        <include layout="@layout/layout_divider_horizontal" />
        <TextView
            android:id="@+id/tv_commodity"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Barley"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_8ssp" />

        <include layout="@layout/layout_divider_horizontal" />
        <TextView
            android:id="@+id/tv_stackno"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="22.8"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_8ssp" />

        <include layout="@layout/layout_divider_horizontal" />
        <TextView
            android:id="@+id/tv_date"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="11 Jul 2021"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10ssp" />

        <include layout="@layout/layout_divider_horizontal" />
        <ImageView
            android:id="@+id/view_stock_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_remove_red_eye_24"
            android:layout_gravity="center"
            />
        <include layout="@layout/layout_divider_horizontal" />
    </LinearLayout>
      <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/_1sdp"
          android:background="@color/view_color"
          ></View>
  </LinearLayout>
</layout>
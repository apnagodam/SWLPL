<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/disabledColor"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_close"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/ic_arrow_back"
                        android:padding="@dimen/_5sdp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Cowin Vaccine Details"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>


            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
            <LinearLayout
                android:id="@+id/above"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/white_back_black_border"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/_5sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/spinner_in_out">

                    <Spinner
                        android:id="@+id/spinner_conv_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:entries="@array/array_cowin_type"
                        android:gravity="right"
                        android:padding="@dimen/_10sdp"
                        android:spinnerMode="dropdown"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_drop_down" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lp_commite_date"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@+id/til_customer_location"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/til_customer_location">

                    <ImageView
                        android:id="@+id/leftDate"
                        android:layout_width="60dp"
                        android:layout_height="45dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/half_circle_background"
                        android:padding="@dimen/_10sdp"
                        android:src="@drawable/date_birth" />


                    <EditText
                        android:id="@+id/userCommitmentDate"
                        style="@style/TextStyleBold"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/leftDate"
                        android:background="@drawable/right_half_circle_background"
                        android:clickable="true"
                        android:cursorVisible="true"
                        android:editable="false"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="@string/booking_date"
                        android:inputType="date"
                        android:maxLines="1"
                        android:textColor="@color/colorBlackDark"
                        android:textColorHint="@android:color/black"
                        android:textCursorDrawable="@null"
                        tools:ignore="Deprecated" />
                </RelativeLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_submit"
                    style="@style/ButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="@string/search_hint"
                    android:textAllCaps="false"
                    android:visibility="visible"
                   />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtempty_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center"
                    android:gravity="center|clip_vertical"
                    android:text="@string/blank_msg"
                    android:textColor="@color/black_back"
                    android:textSize="@dimen/_16ssp"
                    android:visibility="gone" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/fieldStockList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    android:scrollbars="vertical"
                    tools:listitem="@layout/cowin_list_items" />
            </LinearLayout>




    </LinearLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/colorWhite"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/heading"
                        style="@style/TextStyleNormal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10ssp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:lines="2"
                        android:text="Other Expense Reject Notes"
                        android:textSize="@dimen/_16ssp" />

                    <ImageView
                        android:id="@+id/cancel_btn"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="right"
                        android:padding="@dimen/_5sdp"
                        app:srcCompat="@drawable/ic_baseline_cancel_24" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGray" />

                <TextView
                    android:id="@+id/name"
                    style="@style/TextStyleNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:layout_marginRight="@dimen/_10ssp"
                    android:gravity="center"
                    android:lines="2"
                    android:text="Closed Cases"
                    android:textSize="@dimen/_14ssp"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGray"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/reson"
                    style="@style/TextStyleBold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10ssp"
                    android:background="@drawable/white_back_black_border"
                    android:gravity="center"
                    android:hint="Reject Reason"
                    android:inputType="text"
                    android:lines="5"
                    android:textSize="@dimen/_12ssp" />
                <EditText
                    android:id="@+id/amount"
                    style="@style/TextStyleBold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10ssp"
                    android:background="@drawable/white_back_black_border"
                    android:gravity="center"
                    android:hint="Enter Final Amount"
                    android:inputType="numberDecimal"
                    android:lines="5"
                    android:textSize="@dimen/_12ssp" />
                <EditText
                    android:id="@+id/bags"
                    style="@style/TextStyleBold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10ssp"
                    android:background="@drawable/white_back_black_border"
                    android:gravity="center"
                    android:visibility="gone"
                    android:hint="@string/total_bags"
                    android:inputType="number"
                    android:lines="5"
                    android:textSize="@dimen/_12ssp" />

                <TextView
                    android:id="@+id/btn_submit"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/btn_green_background"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_16ssp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>

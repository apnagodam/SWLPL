<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cell_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:gravity="center"
        android:background="@drawable/bg_pdf_creation"
        android:padding="@dimen/_2sdp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_activites"
                style="@style/TextStyleBold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="Process Improvement"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp" />

        </LinearLayout>

        <include layout="@layout/layout_divider_horizontal" />

        <TextView
            android:id="@+id/tv_details"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="P.T.O."
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

        <include layout="@layout/layout_divider_horizontal" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_max_score"
                style="@style/TextStyleBold"
               android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="20"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />


        </LinearLayout>

        <include layout="@layout/layout_divider_horizontal" />

        <LinearLayout
            android:id="@+id/more_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/view"
                android:layout_width="@dimen/_20ssp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                app:srcCompat="@drawable/ic_baseline_remove_red_eye_24" />

        </LinearLayout>
    </LinearLayout>
</layout>
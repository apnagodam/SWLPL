<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_arrow_back"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Your Suggestion"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/approval_request"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:padding="8dp"
                        android:text="Approval Request"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>


            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_settings" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/bg_settings_user_details"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp"
                        android:theme="@style/ThemeOverlay.AppCompat.Dark">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_settings_user_details"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="@dimen/_4sdp"

                            android:theme="@style/ThemeOverlay.AppCompat.Dark">

                            <TextView
                                android:id="@+id/tvLoanOutstanding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@fonts/gilloryregular"
                                android:singleLine="true"
                                android:text="Department List"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:layout_marginRight="3dp"
                                android:background="@drawable/white_back_black_border"
                                android:orientation="horizontal"
                                android:paddingEnd="@dimen/_5sdp"
                                app:helperText="Required *"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent">

                                <Spinner
                                    android:id="@+id/spinnerdepartment_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:background="@color/transparent"
                                    android:entries="@array/array_conv_type"
                                    android:gravity="left"
                                    android:padding="@dimen/_10sdp"
                                    android:spinnerMode="dropdown"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_arrow_drop_down" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@fonts/gilloryregular"
                                android:singleLine="true"
                                android:text="Department Problem"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:layout_marginRight="3dp"
                                android:background="@drawable/white_back_black_border"
                                app:helperText="Required *"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent">

                                <EditText
                                    android:id="@+id/probleam"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:lines="8"
                                    android:padding="@dimen/_2sdp"
                                    android:singleLine="false"
                                    android:textColor="@color/colorPrimary"
                                    android:textColorHint="@color/black_back"
                                    android:textSize="@dimen/_8ssp" />

                                <ImageView
                                    android:id="@+id/speckproblem"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:background="@android:drawable/ic_btn_speak_now"></ImageView>
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@fonts/gilloryregular"
                                android:singleLine="true"
                                android:text="Solution Feedback"
                                android:textColor="@color/colorPrimary"
                                android:textSize="14sp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_3sdp"
                                android:layout_marginRight="3dp"
                                android:background="@drawable/white_back_black_border"
                                app:helperText="Required *"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent">

                                <EditText
                                    android:id="@+id/solution"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@android:color/transparent"
                                    android:lines="8"
                                    android:padding="@dimen/_2sdp"
                                    android:singleLine="false"
                                    android:textColor="@color/colorPrimary"
                                    android:textColorHint="@color/black_back"
                                    android:textSize="@dimen/_8ssp" />
                                <ImageView
                                    android:id="@+id/specksolution"
                                    android:layout_width="@dimen/_30sdp"
                                    android:layout_height="@dimen/_30sdp"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginRight="@dimen/_10sdp"
                                    android:background="@android:drawable/ic_btn_speak_now"></ImageView>
                            </RelativeLayout>
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/nextsumbit"
                            style="@style/ButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
                            android:drawableTint="@color/white"
                            android:elevation="50dp"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_10sdp"
                            android:text="@string/submit"
                            android:textAllCaps="false"
                            android:textColor="@color/colorWhite" />

                        <LinearLayout
                            android:id="@+id/gatepassview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/nextsumbit"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:id="@+id/cell_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:background="@color/colorPrimaryDark"
                                android:gravity="center"

                                android:padding="@dimen/_5sdp"
                                android:weightSum="4">

                                <TextView
                                    android:id="@+id/tv_check_gatepass"
                                    style="@style/TextStyleBold"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5"
                                    android:gravity="center"
                                    android:text="Department Name"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_10ssp" />

                                <include layout="@layout/layout_divider_horizontal" />

                                <TextView
                                    android:id="@+id/tv_quinty"
                                    style="@style/TextStyleBold"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="Status"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_10ssp" />

                                <include layout="@layout/layout_divider_horizontal" />

                                <TextView
                                    android:id="@+id/tv_principal_due"
                                    style="@style/TextStyleBold"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.5"
                                    android:gravity="center"
                                    android:text="@string/approved_by"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/gatepasslist_bottom_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_weight="2">

                                <TextView
                                    android:id="@+id/txtempty_msg"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/_60ssp"
                                    android:gravity="center"
                                    android:text="@string/blank_msg"
                                    android:textColor="@color/black_back"
                                    android:textSize="@dimen/_16ssp"
                                    android:visibility="visible" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/gatepassList"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:background="@drawable/bg_settings_user_details"
                                    android:padding="@dimen/_5sdp"
                                    android:scrollbars="vertical"
                                    android:theme="@style/ThemeOverlay.AppCompat.Dark"
                                    android:visibility="visible"
                                    tools:listitem="@layout/feedback_itmes" />
                            </RelativeLayout>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>
    </LinearLayout>
</layout>

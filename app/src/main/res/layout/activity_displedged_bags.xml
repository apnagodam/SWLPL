<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp"
            tools:context=".activity.displedged.DispledgedBags">

            <TextView
                android:id="@+id/spinnerTerminals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/btn_borders_disabled"
                android:enabled="false"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Select Terminal"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/spinnerUsers"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/spinnerUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_borders_disabled"
                android:enabled="false"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Select Users"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/spinnerCommodity"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinnerTerminals" />


            <TextView
                android:id="@+id/spinnerCommodity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/btn_borders_disabled"
                android:enabled="false"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Select Commodity"

                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/spinnerStack"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinnerUsers" />

            <TextView
                android:id="@+id/spinnerStack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/btn_borders_disabled"
                android:enabled="false"
                android:gravity="center"

                android:padding="@dimen/_10sdp"
                android:text="Select Stack"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tilNetWeight"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinnerCommodity" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNetWeight"
                style="@style/TextInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:hint="Enter Net weight*"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinnerStack">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNetWeight"
                    style="@style/TextStyleNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:enabled="true"
                    android:focusable="true"
                    android:focusedByDefault="true"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilBags"
                style="@style/TextInputStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:hint="Enter Bags*"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilNetWeight">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBags"
                    style="@style/TextStyleNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:enabled="true"
                    android:focusable="true"
                    android:focusedByDefault="true"
                    android:imeOptions="actionNext"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:singleLine="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/spinnerApprovedBy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/btn_borders_disabled"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Approver"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/llImage"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tilBags" />


           <LinearLayout
               android:id="@+id/llImage"
               android:layout_width="match_parent"
               android:orientation="horizontal"
               app:layout_constraintBottom_toTopOf="@id/edNotes"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:gravity="center"
               app:layout_constraintTop_toBottomOf="@id/spinnerApprovedBy"
               android:layout_height="wrap_content">

               <ImageView
                   android:id="@+id/imgDispleased"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_120sdp"
                   android:layout_weight="1"
                   android:background="@drawable/btn_borders"
                   android:padding="@dimen/_10sdp"
                   android:layout_marginHorizontal="@dimen/_5sdp"
                   android:scaleType="centerInside"
                   android:src="@drawable/upload" />
               <Button
                   android:id="@+id/btSelectImage"
                   android:layout_width="match_parent"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:layout_marginHorizontal="@dimen/_5sdp"
                   android:background="@drawable/btn_background"
                   android:text="Displeased Image"
                   android:textColor="@color/white"
                   android:textStyle="bold"
                  />
           </LinearLayout>



            <EditText
                android:id="@+id/edNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                android:background="@drawable/white_back_black_border"
                android:gravity="start"
                android:hint="Notes"
                android:imeOptions="actionDone"
                android:lines="5"
                android:padding="@dimen/_5sdp"
                app:layout_constraintBottom_toTopOf="@id/btSubmit"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/llImage" />

            <Button
                android:id="@+id/btSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_borders"
                android:text="Submit"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/edNotes" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>

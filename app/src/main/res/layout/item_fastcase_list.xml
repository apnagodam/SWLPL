<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        android:background="@drawable/popup_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCaseId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_2sdp"
            android:textColor="@color/black_back"
            android:textSize="@dimen/_10ssp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtCommodity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="@dimen/_2sdp"
                android:textColor="@color/black_back"
                android:textSize="@dimen/_9ssp" />

            <TextView
                android:id="@+id/txtVehicleNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="@dimen/_2sdp"
                android:textColor="@color/black_back"
                android:textSize="@dimen/_9ssp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtStackNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="@dimen/_2sdp"
                android:textColor="@color/black_back"
                android:textSize="@dimen/_9ssp" />

            <TextView
                android:id="@+id/txtTokenNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="@dimen/_2sdp"
                android:textColor="@color/black_back"
                android:textSize="@dimen/_9ssp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtCustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_2sdp"
            android:textColor="@color/black_back"
            android:textSize="@dimen/_9ssp" />

        <TextView
            android:id="@+id/txtTerminal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_2sdp"
            android:textColor="@color/black_back"
            android:textSize="@dimen/_9ssp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/iconGray" />

    </LinearLayout>
</layout>
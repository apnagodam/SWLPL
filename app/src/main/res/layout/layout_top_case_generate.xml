<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/_5sdp"
        android:layout_height="wrap_content">
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ProgressBar
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="@color/colorPrimary"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/layout_rv"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/btn_borders_case_id"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/cell_container"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="@string/lead_id"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"/>

            <include layout="@layout/layout_divider_horizontal" />

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    style="@style/TextStyleBold"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="@string/coustomer_name1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10ssp" />
                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/TextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="8949422632"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>
            <include layout="@layout/layout_divider_horizontal" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvVehicle"
                    style="@style/TextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_4sdp"
                    android:text="8949422632"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />
                <TextView
                    android:id="@+id/tvDriverNum"
                    style="@style/TextStyleBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_4sdp"
                    android:text="8949422632"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

            <include layout="@layout/layout_divider_horizontal" />
            <LinearLayout
                android:id="@+id/more_case"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="visible"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/_5sdp"
                        android:textStyle="bold"
                        android:scrollHorizontally="true"
                        android:ellipsize="end"
                        android:background="@drawable/btn_background"
                        android:maxLines="4"
                        android:text="@string/case_status"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp" />
                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        app:dividerColor="@color/colorPrimary"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvLab"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:visibility="gone"
                        android:background="@drawable/btn_background"
                        android:textStyle="bold"
                        android:scrollHorizontally="true"
                        android:ellipsize="end"
                        android:maxLines="4"
                        android:layout_weight="1"
                        android:text="Submit lab report"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10ssp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_done"
                    android:layout_width="match_parent"
                    android:padding="@dimen/_10sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Done"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />
                <!--        <ImageView-->
                <!--            android:id="@+id/view_case"-->
                <!--            android:layout_width="@dimen/_20ssp"-->
                <!--            android:layout_height="@dimen/_20ssp"-->
                <!--            android:src="@drawable/ic_baseline_remove_red_eye_24"-->
                <!--            android:layout_gravity="center"-->
                <!--            />-->
            </LinearLayout>
            <!--        <LinearLayout-->
            <!--            android:id="@+id/more_view"-->
            <!--            android:layout_width="0dp"-->
            <!--            android:layout_height="match_parent"-->
            <!--            android:layout_weight="1"-->
            <!--            android:layout_gravity="center"-->
            <!--            android:gravity="center"-->
            <!--            android:visibility="visible"-->
            <!--            android:orientation="horizontal">-->
            <!--            <ImageView-->
            <!--                android:id="@+id/view"-->
            <!--                android:layout_width="@dimen/_20ssp"-->
            <!--                android:layout_height="@dimen/_20ssp"-->
            <!--                android:src="@drawable/ic_baseline_remove_red_eye_24"-->
            <!--                android:layout_gravity="center"-->
            <!--                />-->
            <!--            <ImageView-->
            <!--                android:id="@+id/update"-->
            <!--                android:layout_width="@dimen/_20ssp"-->
            <!--                android:layout_height="@dimen/_20ssp"-->
            <!--                android:src="@drawable/ic_baseline_edit_24"-->
            <!--                android:layout_marginLeft="@dimen/_15ssp"-->
            <!--                android:layout_gravity="center"-->
            <!--                />-->
            <!--        </LinearLayout>-->
        </LinearLayout>
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="@dimen/_5sdp"
            android:textStyle="bold"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="4"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />
        <LinearLayout
            android:id="@+id/llCaseId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="@string/case_idd"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:visibility="gone"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_case_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="@string/lead_id"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10ssp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.cardview.widget.CardView>
</layout>
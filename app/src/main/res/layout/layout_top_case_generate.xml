<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cell_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <TextView
            android:id="@+id/tv_id"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="@string/lead_id"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_10ssp" />

        <include layout="@layout/layout_divider_horizontal" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="@string/coustomer_name1"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_10ssp" />

        <include layout="@layout/layout_divider_horizontal" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/TextStyleBold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:text="8949422632"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_10ssp" />

        <include layout="@layout/layout_divider_horizontal" />
    <LinearLayout
        android:id="@+id/more_case"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_status"
            style="@style/TextStyleBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/case_status"
            android:textColor="@color/lead_btn"
            android:textSize="@dimen/_10ssp" />
        <ImageView
            android:id="@+id/view_case"
            android:layout_width="@dimen/_20ssp"
            android:layout_height="@dimen/_20ssp"
            android:src="@drawable/ic_baseline_remove_red_eye_24"
            android:layout_gravity="center"
            />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/more_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="visible"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/view"
                android:layout_width="@dimen/_20ssp"
                android:layout_height="@dimen/_20ssp"
                android:src="@drawable/ic_baseline_remove_red_eye_24"
                android:layout_gravity="center"
                />
            <ImageView
                android:id="@+id/update"
                android:layout_width="@dimen/_20ssp"
                android:layout_height="@dimen/_20ssp"
                android:src="@drawable/ic_baseline_edit_24"
                android:layout_marginLeft="@dimen/_15ssp"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</layout>
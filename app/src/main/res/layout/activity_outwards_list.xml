<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.OutwardsListActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tlOutwards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:navigationIcon="@drawable/ic_arrow_back">

            <TextView
                style="@style/TextStyleBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Outward Requests"
                android:textColor="@color/white" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/cell_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_top100"
            android:weightSum="4">

            <TextView
                android:id="@+id/tv_id"
                style="@style/TextStyleBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="Stack"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_10ssp" />

            <include layout="@layout/layout_divider_horizontal" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/TextStyleBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"

                android:padding="@dimen/_4sdp"
                android:text="@string/coustomer_name1"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_10ssp" />

            <include layout="@layout/layout_divider_horizontal" />

            <TextView
                android:id="@+id/tv_phone"
                style="@style/TextStyleBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="Commodity Truck no."
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_10ssp" />

            <include layout="@layout/layout_divider_horizontal" />

            <TextView
                android:id="@+id/tv_more_view"
                style="@style/TextStyleBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/_4sdp"
                android:text="Stack No."
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_defaulters_status"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cell_container"
            tools:itemCount="35"
            tools:listitem="@layout/layout_stack_request" />
    </LinearLayout>
</layout>